{
  "name": "fastboard-monorepo",
  "private": "true",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint --ext .ts,.tsx . && prettier --check .",
    "check": "pnpm -r check",
    "dev": "pnpm -F=fastboard dev",
    "dev:react": "pnpm -F=fastboard-react dev",
    "dev:ui": "pnpm -F=fastboard-ui dev",
    "build": "pnpm -r build",
    "build:ci": "pnpm --aggregate-output -r build",
    "cleanup": "pnpm -r cleanup",
    "release": "esbuild-dev scripts/release.ts"
  },
  "devDependencies": {
    "@hyrious/dts": "^0.1.9",
    "@hyrious/esbuild-dev": "^0.10.3",
    "@hyrious/esbuild-plugin-svelte": "^0.2.0",
    "@hyrious/rimraf": "^0.1.0",
    "@netless/appliance-plugin": "1.1.17",
    "@netless/window-manager": "^1.0.0",
    "@sveltejs/vite-plugin-svelte": "2.4.2",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@vitejs/plugin-react": "^4.0.2",
    "esbuild": "^0.18.11",
    "eslint": "^8.44.0",
    "eslint-define-config": "^1.21.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-glob": "^3.3.0",
    "prettier": "^3.0.0",
    "rollup": "^3.26.2",
    "sass": "1.63.6",
    "semver": "^7.5.3",
    "svelte": "^3.59.2",
    "svelte-check": "^3.4.5",
    "tsup": "^7.1.0",
    "type-fest": "^3.12.0",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.3",
    "typescript": "5.1.6",
    "vite": "^4.4.1"
  },
  "pnpm": {
    "overrides": {
      "@netless/window-manager": "^1.0.0",
      "@netless/appliance-plugin": "^1.1.17",
      "white-web-sdk": "^2.16.52"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
